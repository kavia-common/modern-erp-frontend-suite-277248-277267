# ERP Frontend Environment Variables
# Copy this file to .env and update values for your environment

# Backend API Configuration
REACT_APP_BACKEND_URL=http://localhost:3001

# Frontend Configuration
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket URL (if using real-time features)
REACT_APP_WS_URL=ws://localhost:3001/ws

# Environment
REACT_APP_NODE_ENV=development

# Optional: Disable telemetry
REACT_APP_NEXT_TELEMETRY_DISABLED=1

# Optional: Enable source maps in development
REACT_APP_ENABLE_SOURCE_MAPS=true

# Optional: Application port
REACT_APP_PORT=3000

# Optional: Trust proxy headers
REACT_APP_TRUST_PROXY=true

# Optional: Logging level (debug, info, warn, error)
REACT_APP_LOG_LEVEL=info

# Optional: Health check path
REACT_APP_HEALTHCHECK_PATH=/healthz

# Optional: Feature flags (JSON object)
REACT_APP_FEATURE_FLAGS={}

# Optional: Enable experimental features
REACT_APP_EXPERIMENTS_ENABLED=false
